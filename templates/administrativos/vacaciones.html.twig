{% extends 'base.html.twig' %}

{% block title %}Vacaciones!{% endblock %}
{% block content %}
    <script src="{{ asset('js/administrativos/vacaciones.js') }}?1211"></script>
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", async () => {
            await inicio();

        })
    </script>
    <style>
        .d-none {
            display: none; /* Oculta la tabla inicialmente */
        }
    </style>
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <form class="d-flex" id="form_factura" onsubmit="buscarVacaciones(event)">
                    <input type="hidden" value="0" name="id" id="id">
                    <label for="cedula"></label>
                    <input type="number" class="form-control me-2" id="cedula" name="cedula" placeholder="Buscar">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                </form>
            </div>
        </div>
    </div>

    <div class="container mt-4" >

        <table id="tabla-usuarios"  class="table d-none">
            <thead >
            <tr>
                <th>ID</th>
                <th>Nombres</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody id="tabla-datos" >
            </tbody>
        </table>
    </div>



{% endblock %}