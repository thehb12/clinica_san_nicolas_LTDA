{% extends 'base.html.twig' %}
{% block title %}Cambiar Clave!{% endblock %}
{% block content %}
    <script src="{{ asset('js/configuracion/resetpassword.js') }}?113" type="text/javascript"></script>
    <script type="text/javascript">
        const path_crud = "{{ path('app_configuracion_reset_crud') }}";
        document.addEventListener("DOMContentLoaded", () => {
            inicioResetpassword();
        });
    </script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            font-size: 1.5em;
            font-weight: bold;
            text-align: center;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            font-weight: bold;
        }

    </style>

    <div class="container-fluid">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Restablecer Contraseña</h5>

                            <!-- Vertical Form -->
                            <form id="formResetClave" class="row g-3 needs-validation" novalidate>
                                <div class="col-md-12">
                                    <label for="oldClave" class="form-label">Clave Anterior</label>
                                    <input type="text" class="form-control" id="oldClave" name="oldClave" autocomplete="true" required>
                                    <div class="invalid-feedback">Por favor ingresa tu clave anterior.</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="oldClave" class="form-label">Nueva Contraseña</label>
                                    <input class="form-control" type="password" id="newClave" name="newClave" autocomplete="true" required>
                                    <div class="invalid-feedback">Por favor ingresa una nueva contraseña.</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="repitClave" class="form-label">Confirmar Contraseña</label>
                                    <input class="form-control" type="password" id="repitClave" name="repitClave" autocomplete="true"
                                           required>
                                    <div class="invalid-feedback">Por favor confirma tu nueva contraseña.</div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                    <button type="reset" class="btn btn-secondary">Borrar</button>
                                </div>
                            </form><!-- Vertical Form -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}