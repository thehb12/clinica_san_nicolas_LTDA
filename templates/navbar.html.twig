<header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
        <a href="{{ path('app_dashboard') }}" class="logo d-flex align-items-center">
            <img src="{{ asset('uploads/fotos/Recurso1.png') }}" alt="">
            <span class="d-none d-lg-block" style="font-size: 15px;">Unidad Clinica San Nicolas LTDA</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
    </div><!-- End Logo -->

    <div class="search-bar">
        <form class="search-form d-flex align-items-center" method="POST" action="#">
            <input class="form-control" type="text" name="buscaruta" id="buscaruta"
                   placeholder="Search"
                   title="Enter search keyword">
            <button type="submit" title="Search"><i class="bi bi-search"></i></button>
        </form>
    </div><!-- End Search Bar -->

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">

            <li class="nav-item d-block d-lg-none">
                <a class="nav-link nav-icon search-bar-toggle " href="#">
                    <i class="bi bi-search"></i>
                </a>
            </li><!-- End Search Icon-->
            <li class="nav-item dropdown pe-3">

                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                    {% if app.user.trabajadores.fotoTrabajadores is null %}
                        <img src="{{asset('uploads/default/perfil_default.png')}}" alt="Profile" class="rounded-circle">
                    {% else %}
                        <img src="{{ asset(app.user.trabajadores.fotoTrabajadores.path) }}" alt="Profile" class="rounded-circle">
                    {% endif %}
                    <span class="d-none d-md-block dropdown-toggle ps-2">{{ app.user.trabajadores.nombres }}</span>
                </a><!-- End Profile Iamge Icon -->

                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                    <li class="dropdown-header">
                        <h6>{{ app.user.roles[0] }}</h6>
                        <span>{{ app.user.email }}</span>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center"
                           href="{{ path('app_configuracion_reset_password') }}">
                            <i class="bi bi-gear"></i>
                            <span>Cambiar Clave</span>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center"
                           href="{{ path('app_configuracion_perfil_index') }}">
                            <i class="bi bi-person"></i>
                            <span>Perfil</span>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="{{ path('app_logout') }}">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Cerrar Sesi√≥n</span>
                        </a>
                    </li>

                </ul>
            </li>

        </ul>
    </nav>
</header>